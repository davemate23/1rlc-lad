%header.navbar.navbar-static-top.navbar-inverse
  .container
    = link_to '1RLC LAD', '#', id: 'logo'
    %nav
      %ul.nav.navbar-nav.navbar-right
        %li= link_to 'Home', root_path
        %li= link_to 'Help', help_path
        %li= link_to 'Employees', employees_path if can?(:index, Employee)
        %li= link_to 'Roles', roles_path if can?(:index, Role)

        - if current_employee.present?
          %li.dropdown
            = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
              Account
              %b.caret

            %ul.dropdown-menu
              %li= link_to 'Profile', current_employee
              %li= link_to 'Settings', edit_employee_path(current_employee)
              %li.divider
              %li= link_to 'Log out', destroy_employee_session_path, method: :delete
        - else
          %li= link_to 'Log in', new_employee_session_path




