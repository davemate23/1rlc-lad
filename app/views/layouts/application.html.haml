%html
  %head
    %title #{yield(:title)} | 1 RLC LAD Personnel Management

    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = javascript_include_tag '//www.google.com/jsapi', 'chartkick'
    = javascript_include_tag "https://www.google.com/jsapi?autoload={'modules':[{'name':'visualization',
       'version':'1','packages':['timeline']}]}"

    :javascript
      $(function() {
        #{yield :document_ready}
      });

    = csrf_meta_tags
    = render 'shim'

  %body
    = render 'header'
    .container
      = bootstrap_flash
      = render 'admin_flashes'
      = yield
      = render 'footer'

